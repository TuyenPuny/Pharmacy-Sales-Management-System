@model IEnumerable<DoAnTotNghiep_WebMinhChau.Areas.Admin.Models.DanhMucSP>
@{
    ViewBag.Title = "Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/LayoutADMIN.cshtml";
}

<div class="container mt-5">
    <div id="notification" class="alert alert-dismissible fade show" style="display:none;" role="alert">
        <span id="notification-message"></span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header bg-light">Tổng Danh Mục</div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.DanhMucCount</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header bg-light">Danh Mục Hoạt Động</div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.DMHD</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-header bg-light">Danh Mục Ngừng Hoạt Động</div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.DMNgungHD</h5>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("Index", "DanhMuc", FormMethod.Get))
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <input type="text" name="searchTerm" class="form-control" placeholder="Nhập từ khóa muốn tìm" />
            </div>
            <div class="col-md-4">
                @Html.DropDownList("selectedTrangThai", new SelectList(new List<SelectListItem>
                {
                    new SelectListItem { Text = "Tất cả trạng thái", Value = "" },
                    new SelectListItem { Text = "Còn hoạt động", Value = "true" },
                    new SelectListItem { Text = "Ngưng hoạt động", Value = "false" }
                }, "Value", "Text"), new { @class = "form-control" })
            </div>
            <div class="col-md-4 text-right">
                <input type="submit" value="Tìm Kiếm" class="btn btn-primary" style="width:100px" />
                @if (Session["Role"] == "ADMIN")
                {
                    @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-light border" })
                }
            </div>
        </div>}

    <div class="list-group-item custom-header font-weight-bold text-center">DANH SÁCH DANH MỤC</div>

    <div class="list-group">

        @foreach (var item in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="flex-grow-1">
                    <span style="padding-right:40px" class="font-weight-bold me-4">@Html.DisplayFor(modelItem => item.MaDanhMuc)</span>
                    <span class="font-weight-bold">@item.TenDanhMuc</span>
                    @if (!item.TrangThai) // Kiểm tra TrangThai nếu không hoạt động
                    {
                        <span class="text-danger">(Ngừng hoạt động)</span>
                    }
                </div>
                <div>
                    @if (Session["Role"] == "ADMIN")
                    {
                        @Html.ActionLink("Chi Tiết", "Details", new { maDanhMuc = item.MaDanhMuc }, new { @class = "btn btn-outline-info btn-sm me-2" })
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { maDanhMuc = item.MaDanhMuc }, new { @class = "btn btn-outline-success btn-sm me-2" })
                    }
                    else
                    {
                        @Html.ActionLink("Chi Tiết", "Details", new { maDanhMuc = item.MaDanhMuc }, new { @class = "btn btn-outline-info btn-sm me-2" })
                    }


                </div>
            </div>
        }
    </div>
    <style>
        body {
            background-color: #fffbfb;
            color: #333;
        }

        h2 {
            color: #2c3e50;
        }

        .custom-header {
            background-color: #d1f2eb;
            border-radius: 0.25rem;
            padding: 10px;
        }

        .list-group-item {
            transition: background-color 0.2s;
        }

            .list-group-item:hover {
                background-color: #f0f8ff;
            }

        .font-weight-bold {
            font-weight: bold;
        }

        .btn {
            margin-right: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

            .btn:hover {
                background-color: #2c3e50;
                color: white;
            }
    </style>
</div>
