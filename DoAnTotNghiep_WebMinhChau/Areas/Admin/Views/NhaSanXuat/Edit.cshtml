@model DoAnTotNghiep_WebMinhChau.Areas.Admin.Models.NhaSanXuat
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LayoutADMIN.cshtml";
}

<h2>Sửa Nhà Sản Xuất</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.MaNSX)
        @Html.DisplayFor(model => model.MaNSX, new { @class = "form-control" })
        @Html.HiddenFor(model => model.MaNSX)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TenNSX)
        @Html.EditorFor(model => model.TenNSX, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TenNSX)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DiaChi)
        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DiaChi)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DienThoai)
        @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DienThoai)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <div class="form-group">
        @Html.Label("Trạng Thái")
        @Html.DropDownList("TrangThai", new SelectList(new List<SelectListItem>
        {
            new SelectListItem { Text = "Đang hợp tác", Value = "Đang hợp tác" },
            new SelectListItem { Text = "Ngưng hợp tác", Value = "Ngưng hợp tác" }
        }, "Value", "Text", Model.TrangThai), new { @class = "form-control" })
        @Html.ValidationMessage("TrangThai")
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    @Html.ActionLink("Hủy", "NhaSanXuat", null, new { @class = "btn btn-secondary" })}


