    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <style>
        /* Custom CSS để điều chỉnh giao diện */
        .navbar-nav .nav-link {
            color: #000;
        }

        .nav-item {
            padding: 5px 10px;
            border-radius: 8px;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .nav-item:hover {
                background: linear-gradient(to bottom, #cfefff, #e8f7ff);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .search-bar {
            background-color: #f0f0f0;
            border: none;
        }

        .custom-header {
            background-color: #cfefff;
            color: #007bff;
            width: 100%;
            height: 50px;
            padding: 0;
            position: relative;
            margin-top: 0;
        }

        .textSize {
            text-align: center;
            font-size: 16px;
            padding: 10px;
        }

            .textSize a {
                text-decoration: none;
                color: #007bff;
            }

        .textNav {
            text-align: center;
            font-size: 20px;
            padding: 10px;
        }

            .textNav .nav-link {
                color: #343a40;
                font-weight: 500;
                transition: background-color 0.3s, color 0.3s;
                padding: 8px 15px;
                border-radius: 4px;
            }

                .textNav .nav-link:hover {
                    color: #f8f9fa;
                }

        #loading-spinner {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(255, 255, 255, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }

        .spinner {
            border: 8px solid #f3f3f3;
            border-top: 8px solid #3498db;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /*số lượng giỏ hàng */
        .nav-item .nav-link {
            position: relative;
            display: inline-flex;
            align-items: center;
            color: #343a40;
        }

            .nav-item .nav-link .cart-count {
                position: absolute;
                top: -8px;
                right: -8px;
                background-color: #dc3545;
                color: #fff;
                font-size: 12px;
                width: 18px;
                height: 18px;
                border-radius: 50%;
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 2px;
            }
        /*** Footer Start ***/

        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .container-fluid.footer {
            margin-top: auto;
            background: #cfefff;
        }

        .footer .footer-item a.text-body:hover {
            color: var(--bs-primary) !important;
        }

        .parent {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .child {
            width: 50px;
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            transform-style: preserve-3d;
            transition: all 0.5s ease-in-out;
            border-radius: 50%;
            margin: 0 5px;
        }

            .child:hover {
                background-color: white;
                background-position: -100px 100px, -100px 100px;
                transform: rotate3d(0.5, 1, 0, 30deg);
                transform: perspective(180px) rotateX(60deg) translateY(2px);
                box-shadow: 0px 10px 10px rgb(1, 49, 182);
            }

        .button {
            border: none;
            background-color: transparent;
            font-size: 20px;
        }

            .button:hover {
                width: inherit;
                height: inherit;
                display: flex;
                justify-content: center;
                align-items: center;
                transform: translate3d(0px, 0px, 15px) perspective(180px) rotateX(-35deg) translateY(2px);
                border-radius: 50%;
            }
        /*** Footer End ***/
        header {
            position: relative; /* Đặt header ở vị trí tương đối ban đầu */
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            transition: position 0.3s; /* Thêm hiệu ứng chuyển tiếp */
        }

            header.fixed {
                position: fixed;
                top: 0;
                margin-top: -16px;
            }

        .dropdown-menu {
            z-index: 1050; /* Giá trị cao hơn các yếu tố khác */
        }

        /*Nav danh mục */
        /* CSS cho danh mục chính */
        .custom-dropdown-menu {
            min-width: 250px;
        }

        .custom-dropdown-submenu {
            position: relative;
        }

            .custom-dropdown-submenu .custom-submenu {
                display: none; /* Ẩn danh mục con mặc định */
                position: absolute;
                top: 0;
                left: 100%;
                min-width: 200px;
                background-color: #f8f9fa;
                border: 1px solid #ddd;
                padding: 10px;
            }

            .custom-dropdown-submenu:hover .custom-submenu {
                display: block;
            }

        /* Các phong cách cho item và link */
        .custom-submenu-item {
            padding-left: 20px;
            width: 200px;
            height: 40px;
        }

        .custom-ctdm-link {
            color: #333;
            text-decoration: none;
            font-size: 19px;
        }

            .custom-ctdm-link:hover {
                color: #ff6b6b;
            }
