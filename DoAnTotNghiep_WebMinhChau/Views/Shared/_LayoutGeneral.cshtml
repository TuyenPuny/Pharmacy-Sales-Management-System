    $(document).ready(function () {
        // Gọi API để lấy số lượng sản phẩm trong giỏ hàng
        $.ajax({
            url: '/api/cart/count', // Đường dẫn đến API
            method: 'GET',
            success: function (response) {
                // Cập nhật số lượng sản phẩm vào span
                $('#cart-count').text(response.count); // Giả sử response.count chứa số lượng
            },
            error: function () {
                console.error('Không thể lấy số lượng sản phẩm trong giỏ hàng.');
            }
        });
    });
</script>
