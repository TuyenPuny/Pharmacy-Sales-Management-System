
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

@{
    ViewBag.Title = "Thông tin công ty";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h3>Đại diện: <strong style="font-size:23px">NHÀ THUỐC MINH CHÂU - MINH CHAU PHARMACY</strong></h3>
            <p><strong>Địa chỉ:</strong> 161 Bạch Đằng, Phường 2, Quận Tân Bình, TP.HCM.</p>
            <p><strong>Mã số doanh nghiệp:</strong> 8363764162</p>
            <p><strong>Thời gian làm việc:</strong> Từ 08h00 đến 21h00</p>
            <p><strong>Tell:</strong> 0899.39.1368</p>
            <p><strong>Email:</strong> <a href="mailto:htnhathuocminhchau@gmail.com">htnhathuocminhchau@gmail.com</a></p>
        </div>
        <div class="col-md-6" style="padding-bottom:100px">
            <h4 class="text-center">Liên hệ với chúng tôi</h4>
            <form action="https://formsubmit.co/12b062e009bf452854d72d3297701152" method="POST">
                <div class="mb-3">
                    <label for="fullName" class="form-label">Họ và tên</label>
                    <input type="text" class="form-control" id="fullName" name="FullName" required>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Số điện thoại</label>
                    <input type="tel" class="form-control" id="phone" name="Phone" required pattern="[0-9]{10}" title="Vui lòng nhập số điện thoại hợp lệ.">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="Email" required>
                </div>
                <div class="mb-3">
                    <label for="subject" class="form-label">Tiêu đề</label>
                    <input type="text" class="form-control" id="subject" name="Subject" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Nội dung</label>
                    <textarea class="form-control" id="message" name="Message" rows="4" required></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" style="width:100%">Gửi</button>
                </div>
                <input type="hidden" name="_next" value="https://localhost:44382/Contact/PhanHoi">
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info mt-3 text-center">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>


