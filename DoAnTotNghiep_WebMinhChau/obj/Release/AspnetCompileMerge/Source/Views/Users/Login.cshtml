<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <meta name="google-signin-client_id" content="292301967627-9i63pk0lsoqvoo2ogmtqodkn4815opv4.apps.googleusercontent.com">
    <style>
        .view_messeger {
            color: red;
            font-size: 19px;
            border-radius: 17px;
            border: 1px solid #e61111;
        }

        .login-buttons-container {
            display: flex; /* Sử dụng Flexbox để sắp xếp các nút trên cùng một hàng */
            align-items: center; /* Canh giữa theo chiều dọc */
            justify-content: center; /* Canh giữa theo chiều ngang */
            gap: 10px; /* Khoảng cách giữa các nút */
        }

        .g-signin2 {
            /* Nếu cần, bạn có thể thêm một số kiểu cho nút đăng nhập của Google */
        }

        .fb-login-button {
            background-color: #4267B2; /* Màu nền của nút Facebook */
            color: white; /* Màu chữ */
            border: none; /* Bỏ viền nút */
            padding: 10px 20px; /* Khoảng cách trong nút */
            font-size: 16px; /* Kích thước chữ */
            border-radius: 5px; /* Bo góc nút */
            cursor: pointer; /* Con trỏ chuột khi di chuyển qua nút */
            text-align: center; /* Canh giữa chữ */
            display: flex; /* Sử dụng flex để căn chỉnh logo và chữ */
            align-items: center; /* Căn giữa theo chiều dọc */
            gap: 10px; /* Khoảng cách giữa logo và chữ */
        }

            .fb-login-button img.fb-logo {
                width: 24px; /* Kích thước logo */
                height: 24px; /* Kích thước logo */
            }

            .fb-login-button:hover {
                background-color: #365899; /* Màu nền khi di chuột qua */
            }
    </style>
    <script>
        function onSignIn(googleUser) {
            var profile = googleUser.getBasicProfile();
            console.log('ID: ' + profile.getId());
            console.log('Name: ' + profile.getName());
            console.log('Image URL: ' + profile.getImageUrl());
            console.log('Email: ' + profile.getEmail());

            // Gửi token đến server để xác thực
            var id_token = googleUser.getAuthResponse().id_token;
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/User/GoogleLogin');
            xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
            xhr.onload = function () {
                var response = JSON.parse(xhr.responseText);
                if (response.success) {
                    console.log(response.message);
                    // Thực hiện điều hướng hoặc cập nhật giao diện người dùng
                    window.location.href = '/Home/Index'; // Hoặc bất kỳ URL nào bạn muốn điều hướng đến
                } else {
                    console.log(response.message);
                }
            };
            xhr.send('idtoken=' + id_token);
        }</script>
</head>
<body>
    <section class="vh-100" style="background-image: url('https://png.pngtree.com/thumb_back/fw800/background/20240410/pngtree-empty-white-counter-with-pharmacy-drugstore-shelves-blurred-background-image_15653702.jpg'); background-size: cover; background-position: center; ">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <h3 class="mb-5" style="font-size:50px">Đăng nhập</h3>
                            <form action="/Users/Login" method="post">
                                <div data-mdb-input-init class="form-outline mb-4" style="text-align: left; color: #434343">
                                    <label class="form-label" for="typeEmailX-2" style="font-size:22px">Email đăng nhập</label>

                                    <input type="text" id="typeEmailX-2" class="form-control form-control-lg" name="Username" placeholder="Nhập email" value="@ViewBag.Username" style="font-size:15px" />
                                </div>

                                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

                                <div data-mdb-input-init class="form-outline mb-4" style="text-align:left; color:#434343">
                                    <label class="form-label" for="typePasswordX-2" style="font-size:22px">Mật khẩu</label>
                                    <div class="input-group">
                                        <input type="password" id="typePasswordX-2" class="form-control form-control-lg" name="pass" placeholder="Nhập mật khẩu" value="@ViewBag.Password" style="font-size:15px" />
                                        <span class="input-group-text" id="togglePassword" style="cursor: pointer;">
                                            <i class="far fa-eye" id="eyeIcon"></i>
                                        </span>
                                    </div>
                                </div>

                                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" type="submit">Đăng nhập</button>
                                <p class="text-center text-muted mt-5 mb-0">
                                    Bạn chưa có tài khoản? <a href="Register" class="fw-bold text-body"><u>Đăng ký tại đây</u></a>
                                </p>
                                <p class="text-center text-muted mt-5 mb-0">
                                    Nếu bạn không nhớ mật khẩu. <a href="ForgotPassword" class="fw-bold text-body"><u>Quên mật khẩu</u></a>
                                </p>
                            </form>

                            @{ if (@ViewBag.Message == null)
                                {
                                    <div class="">
                                        @ViewBag.Message
                                    </div> }
                                else
                                {
                                    <div class="view_messeger">
                                        @ViewBag.Message
                                    </div> } }
                         
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>


<script>
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('typePasswordX-2');
    const eyeIcon = document.getElementById('eyeIcon');

    togglePassword.addEventListener('click', () => {
        // Chuyển đổi loại input giữa 'password' và 'text'
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);

        // Thay đổi biểu tượng mắt
        eyeIcon.classList.toggle('fa-eye');
        eyeIcon.classList.toggle('fa-eye-slash');
    });
</script>