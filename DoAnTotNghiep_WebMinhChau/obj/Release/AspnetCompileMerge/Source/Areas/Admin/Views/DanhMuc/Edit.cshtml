@model DoAnTotNghiep_WebMinhChau.Areas.Admin.Models.DanhMucSP

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LayoutADMIN.cshtml";
}

<style>
    body {
        background-color: #f0f2f5; /* Light background for the page */
    }

    .form-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease; /* Smooth scale effect */
    }

        .form-container:hover {
            transform: scale(1.02); /* Slightly enlarge on hover */
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .text-danger {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease, border-color 0.3s ease; /* Smooth transition */
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 5px;
        transition: border-color 0.3s ease; /* Smooth transition */
    }

        .form-control:focus {
            border-color: #007bff; /* Change border color on focus */
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Subtle shadow on focus */
        }

    .form-check-input {
        margin-top: 0.3rem; /* Align checkbox with text */
    }
</style>

<div class="form-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            Mã danh mục:
            @Html.DisplayFor(m => m.MaDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            Tên danh mục:
            @Html.EditorFor(m => m.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.TenDanhMuc, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            Trạng thái: 
            <div class="form-check">
                @Html.CheckBoxFor(m => m.TrangThai, new { @class = "form-check-input", id = "TrangThai" })
                <label class="form-check-label" for="TrangThai">Hoạt động</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelector('form').addEventListener('submit', function (e) {
            alert('Form is being submitted!');
        });
    });
</script>
