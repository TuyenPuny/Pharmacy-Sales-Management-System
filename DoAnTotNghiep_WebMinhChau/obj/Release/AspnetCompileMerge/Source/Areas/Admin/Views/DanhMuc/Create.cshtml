@model DoAnTotNghiep_WebMinhChau.Areas.Admin.Models.DanhMucSP

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/LayoutADMIN.cshtml";
}
<div class="container mt-5">
    <h2>Tạo Danh Mục Mới</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            Mã Danh Mục
            @Html.TextBoxFor(m => m.MaDanhMuc, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MaDanhMuc, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            Tên Danh Mục
            @Html.TextBoxFor(m => m.TenDanhMuc, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.TenDanhMuc, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Tạo Danh Mục</button>
    } <!-- Đóng khối using ở đây -->
</div>
