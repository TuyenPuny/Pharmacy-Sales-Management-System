@model DoAnTotNghiep_WebMinhChau.Areas.Admin.Models.NhaSanXuat
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/LayoutADMIN.cshtml";
}

<h2>Thêm Nhà Sản Xuất</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

