    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TenNSX)
        @Html.EditorFor(model => model.TenNSX, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TenNSX)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DiaChi)
        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DiaChi)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DienThoai)
        @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DienThoai)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    @Html.ActionLink("Hủy", "NhaSanXuat", null, new { @class = "btn btn-secondary" })}

